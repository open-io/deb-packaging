#!/usr/bin/make -f

DESTDIR=$(CURDIR)/debian/oio-kibana

include /usr/share/dpkg/default.mk

%:
	dh $@

override_dh_auto_clean:
	# do nothing in order to keep the content of the dist/ directory

override_dh_auto_test:
	# do nothing in order to prevent running anything

override_dh_dwz:
	# do nothing in order to prevent running anything

override_dh_auto_build:
	# do nothing in order to prevent running anything

override_dh_strip:
	# do nothing in order to prevent running anything

override_dh_installsystemd:
	# do nothing in order to prevent running anything

override_dh_installdocs:
	# do nothing in order to prevent running anything

override_dh_auto_install:
	mkdir -p $(DESTDIR)/usr/share/oio-kibana
	cp -a `find . -maxdepth 1 -not -name '.*' -not -name debian` $(DESTDIR)/usr/share/oio-kibana/
