#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#DH_VERBOSE = 1
DESTDIR=$(CURDIR)/debian/openio-dashboard-backend
export PBR_VERSION=1.0.78

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


# main packaging script based on dh7 syntax
%:
	dh $@ --buildsystem pybuild --with=systemd

# debmake generated override targets
# This is example for Cmake (See http://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- \
#	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)

override_dh_auto_install:
	dh_auto_install --destdir=debian/openio-dashboard-backend
	mkdir -pv $(DESTDIR)/etc/openio_dashboard
	install debian/openio-dashboard-backend.conf.cfg $(DESTDIR)/etc/openio_dashboard/conf.cfg
	touch $(DESTDIR)/etc/openio_dashboard/secret
	mkdir -pv $(DESTDIR)/etc/openio_dashboard/ssh
	touch $(DESTDIR)/etc/openio_dashboard/ssh/id_rsa $(DESTDIR)/etc/openio_dashboard/ssh/id_rsa.pub
	mkdir -pv $(DESTDIR)/usr/share/openio_dashboard
	install debian/openio-dashboard-backend.sql $(DESTDIR)/usr/share/openio_dashboard/openio-dashboard-initdb.sql

override_dh_auto_clean:

override_dh_auto_test:

override_dh_installinit:
	dh_installinit --name=openio_celery_beat
	dh_installinit --name=openio_celery
	dh_installinit --name=openio_dashboard

#override_dh_fixperms:
#	dh_fixperms
	
